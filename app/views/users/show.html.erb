<%= render 'layouts/page_title', title: "#{@user.first_name} #{@user.last_name}" %>

<div class="row">
  <div class="col-md-4">
    <%= image_tag(@user.picture.url, size: "300", class: "gravatar") if @user.picture? %>
  </div>
  <div class="col-md-8">
    <h2 class="left"><%= @user.headline %></h2>
    <strong><%= @user.location %></strong>
  </div>
</div>
